@page
@model HotelAndLogin.Views.hotel.HotelListModel
@{
}

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-3">
        <a asp-page="/Create" class="btn btn-info form-control text-white">Create New Book</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Hotels.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Hotels.FirstOrDefault().HotelName"></label>
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(m=>m.Books.FirstOrDefault().Author)*@
                            <label asp-for="Hotels.FirstOrDefault().Price"></label>
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var item in Model.Hotels)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.HotelName)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Price)
                            </td>
                        
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No books available.</p>
            }
        </form>
    </div>


    <div class="col-12" style="text-align:center">
        <br />
        <span class="h3 text-info">OR</span>
        <br /><br />
    </div>
    <div class="col-12 border p-3">

        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Hotel Name</th>
                    <th> Price</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>

</div>